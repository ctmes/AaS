---
import { getPosts } from '../lib/statamic';

const posts = await getPosts();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro + Statamic</title>
		<style>
			body {
				font-family: system-ui, -apple-system, sans-serif;
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
				background: #0f0f0f;
				color: #ffffff;
			}
			h1 {
				font-size: 3rem;
				background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				margin-bottom: 2rem;
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				margin-top: 2rem;
			}
			.post-card {
				background: #1a1a1a;
				border-radius: 12px;
				padding: 1.5rem;
				border: 1px solid #333;
				transition: transform 0.2s, border-color 0.2s;
			}
			.post-card:hover {
				transform: translateY(-4px);
				border-color: #4ecdc4;
			}
			.post-title {
				font-size: 1.5rem;
				margin: 0 0 0.5rem 0;
				color: #4ecdc4;
			}
			.post-date {
				color: #888;
				font-size: 0.9rem;
			}
			.error {
				background: #ff6b6b;
				color: white;
				padding: 1rem;
				border-radius: 8px;
			}
			.nav {
				margin-bottom: 2rem;
			}
			.nav a {
				color: #4ecdc4;
				text-decoration: none;
				margin-right: 1rem;
				font-weight: 500;
			}
			.nav a:hover {
				text-decoration: underline;
			}
		</style>
	</head>
	<body>
		<nav class="nav">
			<a href="/">Home</a>
			<a href="/blog">Blog</a>
			<a href="/products">Products</a>
		</nav>
		
		<h1>Astro + Statamic</h1>
		
		{posts && posts.length > 0 ? (
			<div class="posts-grid">
				{posts.map((post: any) => (
					<article class="post-card">
						<h2 class="post-title">{post.title}</h2>
						{post.date && <p class="post-date">{new Date(post.date).toLocaleDateString()}</p>}
						{post.excerpt && <p>{post.excerpt}</p>}
					</article>
				))}
			</div>
		) : (
			<div class="error">
				<p>No posts found or error connecting to Statamic API.</p>
				<p>Check that your Railway deployment is running.</p>
			</div>
		)}
	</body>
</html>
