---

<div class="client-slider-section">
    <div class="uk-container uk-container-center">
        <h2>Our Clients and Major Projects</h2>
    </div>
    <div class="slider-container">
        <div class="slider-track">
             {clients.map(client => (
                <div class="slide">
                    <a href={client.url} target="_blank" rel="noopener noreferrer">
                        <img src={client.img} alt={client.name} />
                    </a>
                </div>
            ))}
            {/* Duplicate for infinite loop effect */}
            {clients.map(client => (
                <div class="slide">
                    <a href={client.url} target="_blank" rel="noopener noreferrer">
                        <img src={client.img} alt={client.name} />
                    </a>
                </div>
            ))}
        </div>
    </div>
</div>

<style>
    .client-slider-section {
        padding: 50px 0;
        background: #fff;
        overflow: hidden;
    }
    .uk-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        text-align: center;
        margin-bottom: 30px;
    }
    h2 {
        font-size: 2rem;
        color: #333;
    }
    .slider-container {
        position: relative;
        width: 100%;
        overflow: hidden;
    }
    .slider-track {
        display: flex;
        width: max-content;
        animation: scroll 40s linear infinite;
    }
    .slide {
        width: 200px;
        padding: 0 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .slide img {
        max-width: 100%;
        max-height: 80px;
        filter: grayscale(100%);
        opacity: 0.7;
        transition: all 0.3s;
    }
    .slide:hover img {
        filter: grayscale(0%);
        opacity: 1;
    }
    
    @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>
