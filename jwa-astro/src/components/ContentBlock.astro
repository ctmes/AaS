---
import { marked } from 'marked'; 
interface Props {
  heading?: string;
  content?: string;
  ctaText?: string;
  ctaUrl?: string;
}
const { heading, content, ctaText, ctaUrl } = Astro.props;


const htmlContent = content ? await marked.parse(String(content)) : '';
const hasSlot = Astro.slots.has('default');
---

<div class="textimage textimage-home">
    <div class="uk-container uk-container-center">
        <div class={`uk-grid ${hasSlot ? 'has-media' : ''}`}>
            <div class={`textimage-text ${hasSlot ? 'uk-width-medium-1-2' : ''}`}>
                {heading && <h2>{heading}</h2>}
                <div set:html={htmlContent} />
                {ctaText && ctaUrl && (
                    <p><a class="btn btn-border" href={ctaUrl}>{ctaText}</a></p>
                )}
            </div>
            {hasSlot && (
                <div class="textimage-image uk-width-medium-1-2">
                    <slot />
                </div>
            )}
        </div>
    </div>
</div>

<style>
    .textimage-home {
        padding: 60px 0;
        background: #f9f9f9;
        color: #333;
    }
    .uk-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    /* Grid system simplified */
    .uk-grid {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -15px;
    }
    .uk-grid > * {
        padding: 0 15px;
        box-sizing: border-box;
    }
    .uk-width-medium-1-2 {
        width: 100%;
    }
    
    @media (min-width: 768px) {
        .uk-width-medium-1-2 {
            width: 50%;
        }
    }

    .textimage-text h2 {
        font-size: 2.5rem;
        margin-bottom: 20px;
        line-height: 1.2;
    }
    .btn-border {
        display: inline-block;
        padding: 10px 20px;
        border: 2px solid #333;
        color: #333;
        text-decoration: none;
        text-transform: uppercase;
        font-weight: bold;
        transition: all 0.3s;
        margin-top: 20px;
    }
    .btn-border:hover {
        background: #333;
        color: #fff;
    }
    
    .textimage-image {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
