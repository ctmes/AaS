---
interface Props {
  applications: any[];
}

import ApplicationItem from './ApplicationItem.astro';

const { applications } = Astro.props;

// Get all unique tags from applications
const allTags = applications.flatMap(app => app.tags || []);
const uniqueTags = [...new Set(allTags)].filter(Boolean);

---

<div class="casetudy-landing application-landing homepage">
    <div class="uk-container uk-container-center">
        <h1 class="text-center">Custom Matting Solutions Fit For Every Situation</h1>
        
        <div class="filter-buttons text-center">
            <button class="button is-checked" data-filter="*">All</button>
            {uniqueTags.map(tag => (
                <button class="button" data-filter={`.${tag}`}>{tag}</button>
            ))}
        </div>

    </div>
    <div class="application-list">
        <div class="grid">
            {applications.map((app: any) => {
                const tagClasses = app.tags ? app.tags.join(' ') : '';
                return (
                    <div class={`grid-item ${tagClasses}`}>
                        <ApplicationItem 
                            title={app.title}
                            description={app.description}
                            image={app.main_image ? app.main_image.url : "https://placehold.co/750x750"}
                            url={`/applications/${app.slug}`}
                        />
                    </div>
                )
            })}
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const buttons = document.querySelectorAll('.filter-buttons .button');
        const items = document.querySelectorAll('.grid-item');

        buttons.forEach(button => {
            button.addEventListener('click', () => {
                // Update active state
                buttons.forEach(btn => btn.classList.remove('is-checked'));
                button.classList.add('is-checked');

                const filterValue = button.getAttribute('data-filter');

                items.forEach((item: any) => {
                    if (filterValue === '*' || item.classList.contains(filterValue.substring(1))) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    });
</script>

<style>
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
    }
    .text-center { text-align: center; margin-bottom: 30px; }
    
    .filter-buttons {
        margin-bottom: 20px;
    }
    
    .button {
        background-color: transparent;
        border: 2px solid #333;
        color: #333;
        padding: 8px 16px;
        margin: 0 5px;
        cursor: pointer;
        font-family: inherit;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .button:hover, .button.is-checked {
        background-color: #333;
        color: #fff;
    }
</style>
