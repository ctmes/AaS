---
interface Props {
  data: Record<string, string>;
  title?: string;
}

const { data, title = "Technical Specifications" } = Astro.props;
---

<div class="technical-specs">
    <h3>{title}</h3>
    <div class="table-responsive">
        <table class="uk-table uk-table-striped">
            <tbody>
                {Object.entries(data).map(([key, value]) => (
                    <tr>
                        <th class="spec-label">{key}</th>
                        <td class="spec-value" set:html={value}></td>
                    </tr>
                ))}
            </tbody>
        </table>
    </div>
</div>

<style>
    .technical-specs {
        margin: 40px 0;
        background: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    h3 {
        margin-top: 0;
        margin-bottom: 20px;
        color: #333;
        font-size: 1.5rem;
        border-bottom: 2px solid #e5e5e5;
        padding-bottom: 10px;
    }
    .uk-table {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
    }
    .uk-table th, .uk-table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #e5e5e5;
    }
    .uk-table-striped tbody tr:nth-of-type(odd) {
        background-color: #fff;
    }
    .spec-label {
        font-weight: bold;
        color: #333;
        width: 40%;
    }
    .spec-value {
        color: #666;
    }
    @media (max-width: 600px) {
        .spec-label, .spec-value {
            display: block;
            width: 100%;
        }
        .spec-label {
            padding-bottom: 5px;
            color: #555;
        }
    }
</style>
